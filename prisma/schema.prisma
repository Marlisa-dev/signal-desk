generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Ticket {
  id          Int      @id @default(autoincrement())
  title       String
  firstName   String
  lastName    String
  description String
  type        String
  attachment  String?
  status      String   @default("open")
  priority    String   @default("medium")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}